@using TechSolutionsLibs.Models;
@model EmployeeActivityViewModel

@{
    ViewData["Title"] = "Employee Activity Controller";

      var items = new List<SelectListItem>
        {            
            new SelectListItem { Value = "Developing in .Net Core ReactJs", Text = "Developing in .Net Core ReactJs", Selected=true },
            new SelectListItem { Value = "Developing in .Net Core Angular", Text = "Developing in .Net Core Angular"  },
            new SelectListItem { Value = "Developing in .Net Core ReactJs And Redux", Text = "Developing in .Net Core ReactJs And Redux"  }
        };
}

    <div class="text-left">
        <div>
            <h1>Add Employee Activity ByDapper </h1>
            
            <form asp-controller="EmployeeActivity" asp-action="AddEmployeeActivity" method="post">

                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    @Html.EditorFor(model => model.FirstName,
                    new { htmlAttributes = new { @class = "form-control" } })
                    <span class="error" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    @Html.EditorFor(model => model.LastName,
                    new { htmlAttributes = new { @class = "form-control" } })
                    <span class="error" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label for="EmailAddress">Email Address</label>
                    @Html.EditorFor(model => model.EmailAddress,
                    new { htmlAttributes = new { @class = "form-control" } })
                    <span class="error" asp-validation-for="EmailAddress"></span>
                </div>

                <div class="form-group">
                    <label for="ActivityName">Activity Name</label>
                    <select class="custom-select custom-select-sm mb-3" asp-for="ActivityName" asp-items="items">
                    </select>
                    <span class="error" asp-validation-for="ActivityName"></span>
                </div>

                <div class="form-group">
                    <label for="Comments">Comments</label>

                    <textarea class="form-control" asp-for="Comments"></textarea>
                    <span class="error" asp-validation-for="Comments"></span>
                </div>

             

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
